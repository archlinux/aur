# -*- sh -*-
__inst_depmod()
{
    EXTRAMODULES='extramodules-4.5-pf'
    depmod $(cat /usr/lib/modules/${EXTRAMODULES}/version)
}

post_install() {
    cat << EOF
===> You must load vboxdrv module before starting VirtualBox:
===> # modprobe vboxdrv
EOF
    __inst_depmod
}



post_upgrade() {
    __inst_depmod
}

post_remove() {
    __inst_depmod
}
