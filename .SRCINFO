pkgbase = auto-root-git
	pkgdesc = A script that automatically reruns your last command as root if you forgot it. Will ALWAYS prompt for the password. Requires 'bash' or 'zsh'. Add /opt/auto-root/auto-root-shrc to your *rc file on first install.
	pkgver = 1.0.30
	pkgrel = 1
	url = https://github.com/Deckweiss/auto-root
	install = auto-root.install
	arch = any
	license = GPLv3
	depends = util-linux
	depends = coreutils
	optdepends = bash: either one of the two shells is required
	optdepends = zsh: either one of the two shells is required
	optdepends = sudo: you can use su instead
	provides = auto-root
	conflicts = auto-root
	source = git+https://github.com/Deckweiss/auto-root.git
	sha256sums = SKIP

pkgname = auto-root-git
