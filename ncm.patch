         return NULL;
 
+    if(res->path){
+        char *suffix = "\0";
+        for(int i = (int) (strlen(res->path) - 1); i >= 0; --i){
+            if(res->path[i] == '.'){
+                suffix = res->path + i + 1;
+                break;
+            }
+        }
+        if(strcmp(suffix, "flac") == 0)
+            return strdup("audio/flac");
+    }
+
     const char *type = vlc_http_msg_get_header(res->response, "Content-Type");
     return (type != NULL) ? strdup(type) : NULL;
