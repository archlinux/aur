     {
         msg_Err( p_mux, "could not write frame (pts: %"PRId64", dts: %"PRId64") "
                  "(pkt pts: %"PRId64", dts: %"PRId64")",
-                 p_data->i_pts, p_data->i_dts, pkt.pts, pkt.dts );
+                 p_data->i_pts, p_data->i_dts, pkt->pts, pkt->dts );
         block_Release( p_data );
+        av_packet_unref( pkt );
         return VLC_EGENERIC;
     }
 
+
+    av_packet_unref( pkt );
     block_Release( p_data );
     return VLC_SUCCESS;
 }
