+mp_disks="UNDEF"
+on_multipath () {
+	type multipath >/dev/null 2>&1 || return 1
+	local parent="${1%/*}"
+	local device="${parent##*/}"
+
+	if [ "$mp_disks" = "UNDEF" ]; then
+		mp_disks=`multipath -d -l | sed -n -e 's/^.\+[0-9]\+:[0-9]\+:[0-9]\+:[0-9]\+ \([^ ]\+\) .*/\1/p'`
+	fi
+
+	if [ -z "$mp_disks" ]; then
+		return 1
+	fi
+
+	for i in $mp_disks; do
+		if [ "$device" = "$i" ]; then
+			debug "$1: part of multipath disk $i"
+			return 0
+		fi
+	done
+	return 1
+}

