post_install() {
#this sets up the service files
	/usr/bin/alsabeep-helper install

	cat <<EOF

configure alsabeep using /etc/alsabeep.conf
generated service files should execute alsabeep-helper
alsabeep-helper help shows details

EOF
}

post_upgrade() {
  post_install
}

pre_remove(){
	/usr/bin/alsabeep-helper remove
	}

post_remove() {
	(
	killall alsabeep-daemon || true
	modprobe -r alsabeep || true
	rm -rf	/lib/systemd/system/alsabeep.service \
			/etc/runit/sv/alsabeep \
			/etc/init.d/alsabeep \
			/etc/dinit.d/alsabeep \
			/etc/s6/*/*/*/alsabeep \
			|| true
	) 2>/dev/null
}
