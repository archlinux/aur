+++ b/smime_keys.pl
@@ -81,6 +81,30 @@ if ( -d $root_certs_path) {
 # OPS
 #
 
+
+sub get_certs {
+    my $file = shift;
+    return undef unless (defined($file) && -e $file);
+
+    open IN, "<$file";
+
+    my @certs = ();
+    my $in_cert = 0;
+    my $cert = q{};
+    while ( <IN> ) {
+        $in_cert = 1 if ( /^-----BEGIN CERTIFICATE-----$/ );
+        $cert .= $_;
+
+        if ( /^-----END CERTIFICATE-----$/ )  {
+            push @certs, $cert;
+            $cert = q{};
+            $in_cert = 0;
+        }
+    }
+
+    return @certs;
+}
+
