+
+        my $file = sprintf( '/tmp/smime-%d.%d', $$, int(rand( 999999 ) ) );
+        print STDERR "TMPFILE: $file\n";
+        if ( -e $file ) {
+            die( "ERROR: TMPFILE $file existss?!?!" );
+        }
+        open OUT, ">$file";
+        print OUT $cert;
+        close OUT;
+
+        my $format = -B $file ? 'DER' : 'PEM';
+        my $cmd = "$opensslbin x509 -noout -hash -in $file -inform $format";
+
