[Unit]
Description=Jitsi-Meet Conference Focus
After=network-online.target

[Service]
Environment=PATH=/usr/lib/jvm/java-11-openjdk/bin:/bin:/usr/bin:/usr/local/bin
EnvironmentFile=/etc/jicofo-nightly/config
User=jicofo
ExecStart=/usr/lib/jicofo-nightly/jicofo.sh ${JICOFO_OPTS}
WorkingDirectory=/var/lib/jicofo-nightly
StateDirectory=jicofo-nightly
StateDirectoryMode=0750
LogsDirectory=jicofo-nightly
LogsDirectoryMode=0750
ConfigurationDirectory=jicofo-nightly
ConfigurationDirectoryMode=0700

Restart=on-failure
SuccessExitStatus=143
RestartPreventExitStatus=78

# Hardening
NoNewPrivileges=yes
PrivateTmp=yes
PrivateDevices=yes
ProtectHome=yes
ProtectKernelTunables=yes
ProtectControlGroups=yes
ProtectSystem=strict

[Install]
WantedBy=multi-user.target
