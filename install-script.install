RED='\033[0;31m'
NC='\033[0m' # No Color

post_install() {
	echo -e "${RED}!!! Modify /etc/matrix-conduit/conduit.toml to suit your configuration needs !!!${NC}"
	echo -e "Don't forget to enable Conduit:"
	echo -e "	systemctl enable --now matrix-conduit"
}

post_upgrade() {
	echo -e "${RED}Don't forget to restart Conduit:"
	echo -e "	systemctl restart matrix-conduit"
}
