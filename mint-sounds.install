# Colored makepkg-like functions
msg_blue() {
	printf "${blue}==>${bold} $1${all_off}\n"
}

all_off="$(tput sgr0)"
bold="${all_off}$(tput bold)"
blue="${bold}$(tput setaf 4)"

_update() {
	msg_blue 'Updating GSettings schemas...'
	glib-compile-schemas '/usr/share/glib-2.0/schemas/'
}

post_install() {
	_update
}

post_upgrade() {
	_update
}

post_remove() {
	_update
}
