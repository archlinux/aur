post_upgrade() {
    if hash systemd-sysusers &> /dev/null; then
        systemd-sysusers gogs.conf
    fi

    if hash systemd-tmpfiles &> /dev/null; then
        systemd-tmpfiles --create gogs.conf
    fi
}

post_install() {
	post_upgrade

cat <<EOF
>>>
	You need finish setup:
	1) systemctl start gogs.service
	2) Open http://localhost:3000
>>>
EOF
	
}
