-    for (unsigned int i = 0; i < numUVSets; ++i)
-    {
-      _outStream << ", out float4 oUV" << i
-                << " : TEXCOORD" << texCoordSet++ << "\n";
-    }
-  }
-
-  if (_prof->getParent()->getDebugLevel() && _tt != RENDER_COMPOSITE_MAP)
-  {
