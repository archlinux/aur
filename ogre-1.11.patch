-  _outStream << "void main_vp(\n";
-
-  bool compression = false;
-
-#if OGRE_VERSION_MAJOR >= 1 && OGRE_VERSION_MINOR >= 8
-  compression = _terrain->_getUseVertexCompression() &&
-                _tt != RENDER_COMPOSITE_MAP;
