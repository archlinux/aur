pre_install() {
	if [[ $(/usr/bin/lsb_release -is) != "Arch" ]] ; then exit 1; fi
}

post_install() {
	## Load uinput if it is not loaded already
	/usr/bin/grep -q 'uinput' /proc/modules
	if [ ! $? -eq 0 ] && [ -d "/lib/modules/$(uname -r)" ]
		then
			/usr/bin/modprobe uinput
	fi
	
	## reload udev rules
	/usr/bin/udevadm control --reload-rules
	printf "\nThanks for using my pkg ğŸ˜Š\n\n"
}

pre_upgrade() {
	if [[ $(/usr/bin/lsb_release -is) != "Arch" ]] ; then exit 1; fi
}

post_upgrade() {
    ## reload udev rules
    /usr/bin/udevadm control --reload-rules
	printf "\nThanks for still using my pkg ğŸ˜Š\n\n"
}

