pkgname=liferea

post_install() {
  usr/sbin/gconfpkg --install liferea-git
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  glib-compile-schemas /usr/share/glib-2.0/schemas/
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
 usr/sbin/gconfpkg --uninstall liferea-git
}

post_remove() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  glib-compile-schemas /usr/share/glib-2.0/schemas/
}
