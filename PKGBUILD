_gemname=hike
pkgname=ruby-$_gemname
pkgver=2.1.3
pkgrel=1
pkgdesc='Find files in a set of paths'
arch=(any)
url='https://github.com/sstephenson/hike'
license=(MIT)
depends=(ruby)
options=(!emptydirs)
source=(https://rubygems.org/downloads/$_gemname-$pkgver.gem)
