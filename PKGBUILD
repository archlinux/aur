# Maintainer: Patrick M. <aur at patrickmang dot de>

pkgbase='monaspace-font'
pkgname=('otf-monaspace-argon'
         'otf-monaspace-krypton'
         'otf-monaspace-neon'
         'otf-monaspace-radon'
         'otf-monaspace-xenon'
         'ttf-monaspace-argon'
         'ttf-monaspace-krypton'
         'ttf-monaspace-neon'
         'ttf-monaspace-radon'
         'ttf-monaspace-xenon')
pkgver=1.000
pkgrel=1
pkgdesc="An innovative superfamily of fonts for code"
arch=('any')
url="https://monaspace.githubnext.com/"
license=('OFL')
source=("https://github.com/githubnext/monaspace/releases/download/v${pkgver}/monaspace-v${pkgver}.zip")
md5sums=('2d3af895018340b8948112557c011696')

install_otf() {
  cd "${srcdir}/monaspace-v${pkgver}/fonts/otf"
  install -Ddm755 "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}"
  install -Dm644 "Monaspace${1}-BoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-Bold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-ExtraBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-ExtraBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-ExtraLightItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-ExtraLight.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-Italic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-LightItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-Light.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-MediumItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-Medium.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-Regular.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideExtraBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideExtraBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideExtraLightItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideExtraLight.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideLightItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideLight.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideMediumItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideMedium.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideRegular.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideSemiBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-SemiWideSemiBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideExtraBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideExtraBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideExtraLightItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideExtraLight.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideLightItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideLight.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideMediumItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideMedium.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideRegular.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideSemiBoldItalic.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
  install -Dm644 "Monaspace${1}-WideSemiBold.otf" "${pkgdir}/usr/share/fonts/OTF/Monaspace${1}/"
}

install_ttf() {
  cd "${srcdir}/monaspace-v${pkgver}/fonts/variable"
  install -Ddm755 "${pkgdir}/usr/share/fonts/TTF/Monaspace${1}"
  install -Dm644 "Monaspace${1}VarVF[wght,wdth,slnt].ttf" "${pkgdir}/usr/share/fonts/TTF/Monaspace${1}/"
}

package_otf-monaspace-argon() {
  install_otf "Argon"
}

package_otf-monaspace-krypton() {
  install_otf "Krypton"
}

package_otf-monaspace-neon() {
  install_otf "Neon"
}

package_otf-monaspace-radon() {
  install_otf "Radon"
}

package_otf-monaspace-xenon() {
  install_otf "Xenon"
}

package_ttf-monaspace-argon() {
  install_ttf "Argon"
}

package_ttf-monaspace-krypton() {
  install_ttf "Krypton"
}

package_ttf-monaspace-neon() {
  install_ttf "Neon"
}

package_ttf-monaspace-radon() {
  install_ttf "Radon"
}

package_ttf-monaspace-xenon() {
  install_ttf "Xenon"
}
