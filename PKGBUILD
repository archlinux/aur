pkgname=stacklet
pkgver=0.1.0
pkgrel=2
pkgdesc="Generate custom applets and menus"
url="https://github.com/ggemre/stacklet"
license=("MIT")
arch=("x86_64")
provides=("stacklet")
conflicts=("stacklet")
source=("https://github.com/ggemre/stacklet/archive/refs/tags/$pkgver.tar.gz")
sha256sums=("760f37eaa5746a24792635b1eeb8d3c35705df5655a6152ea3062fc1f57adf53")

build() {
    cd "$srcdir/$pkgname-$pkgver"
    cargo build --release --locked
}
package() {
    cd "$srcdir/$pkgname-$pkgver"
    install -Dm755 target/release/$pkgname -t "$pkgdir/usr/bin"
}
