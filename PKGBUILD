pkgname='jaguar-bin'
pkgver=1.10.3
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('0c7324e35e953b573a1b653593e20d90595f57ac1492179b4f39defdd5d3befc')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
