pkgname='jaguar-bin'
pkgver=1.10.2
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('288db6e79b3fbb749da939c8168b20170cb3bf939e4cf35c7dae5074ec310505')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
