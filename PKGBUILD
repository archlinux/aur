pkgname='jaguar-bin'
pkgver=1.23.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('7b87eb3132085ab7f65d4fa294b0f341fb7c72ff33d59b3b1e39a76a9b7bd20d')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
