pkgname='jaguar-bin'
pkgver=1.9.2
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('a656bf736489d04d8cf2665d9907fff773b246846b4d2a085a49488e33ddb778')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
