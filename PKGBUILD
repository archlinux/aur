pkgname='jaguar-bin'
pkgver=1.8.4
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('9213d87b661dd20027e7ad76ad7d29252a2f1b638e68fd160969675af59ac1ba')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
