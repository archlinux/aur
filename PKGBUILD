pkgname='jaguar-bin'
pkgver=1.31.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('f55c9fb9344778a95414873777f5e7934ced7b75aa619aa163383cf6ec698846')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
