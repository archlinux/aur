pkgname='jaguar-bin'
pkgver=1.9.11
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('a3139fee1a42a5bb957051b60db37c84cfbc427b20dcae7bc91eaf53fb2f04a8')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
