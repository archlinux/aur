pkgname=tod-bin
pkgver=0.3.7
pkgrel=1
pkgdesc="A tiny unofficial Todoist client"
url="https://github.com/alanvardy/tod"
license=("MIT")
arch=("x86_64")
provides=("tod")
conflicts=("tod")
source=("https://github.com/alanvardy/tod/releases/download/v$pkgver/tod-$pkgver-x86_64.tar.gz")
