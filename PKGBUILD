pkgname='jaguar-bin'
pkgver=1.27.2
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('75dcaddc645b04337ccc4ae9a76330ef54a80d708a33e8ff60fff1a86315928d')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
