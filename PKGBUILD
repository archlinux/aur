pkgname='jaguar-bin'
pkgver=1.22.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('d8de7352ca9e0ef086e6a8a70777aeaa1243ba1803514812d7d66c3f972c1ba7')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
