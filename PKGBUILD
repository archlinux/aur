pkgname='jaguar-bin'
pkgver=1.9.3
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('23f75f4c5a777693157ae1a2ae2130de99ddb7695dd0df1fcff7229a183fe72f')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
