# PKGBUILD generated by pipman
pkgname=python-linuxpy
pkgver=0.9.0
pkgrel=2
pkgdesc="Human friendly interface to linux subsystems using python"
arch=(any)
url="https://github.com/tiagocoutinho/linuxpy"
license=(GPL-3.0-or-later)
makedepends=("python" "python-pip")

build() {
  pip install --no-deps --target="linuxpy" linuxpy==${pkgver}
}

package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/linuxpy/* $pkgdir/"$sitepackages"
}
