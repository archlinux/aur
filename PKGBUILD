pkgname='jaguar-bin'
pkgver=1.9.9
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('6383163bea681e62271c01df657230326f99ea7bd71b4eb97e1d2305c3315e97')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
