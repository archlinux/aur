pkgname='jaguar-bin'
pkgver=1.26.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('625a09361e774458b64fecadfdea8ee4ef9ad41162a194aae330afde1bdf0d3d')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
