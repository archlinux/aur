pkgname='jaguar-bin'
pkgver=1.10.4
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('1ba11774530f10554a0d973a83387385c5386528cd2e1d61f1a1379ef3e51315')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
