pkgname='jaguar-bin'
pkgver=1.21.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('a3f95fd0daaf145dc3ac1bfbc04c2d391e5f98ef0fe1fc3cb6b7eea7789a9baf')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
