pkgname='jaguar-bin'
pkgver=1.25.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('8b353ab062af9f3a198af819e0e975f7342a4726c4992f9a44c7a1c7b6507223')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
