package (){
  cd "$srcdir"
  _scriptsdir="$pkgdir"/usr/lib/gimp/2.0/plug-ins
  install -dm755 "$_scriptsdir"
  for i in *.py; do
    install -Dm644  $i "$_scriptsdir"/$i
  done
  install -Dm644 "$pkgname-$pkgver-readme.md" "$pkgdir/usr/share/doc/$pkgname/readme.md"
}
