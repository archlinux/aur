pkgname=yaf
pkgver=3.0.0.alpha1
pkgrel=1
pkgdesc="Processes packet data from pcap dumpfiles as generated by tcpdump or via live captures"
arch=('i686' 'x86_64')
url='https://tools.netsa.cert.org/yaf/'
license=('GPL')
depends=('glib2>=2.6.4' 'libpcap' 'libfixbuf>=2.99.0')
source=("https://tools.netsa.cert.org/releases/${pkgname}-${pkgver}.tar.gz")
sha256sums=('f2d388ecd53d9c48686f92c1dc816fa0d3fe570f5b6e4a6cbfdc191a4acaeadf')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}/" install
}
