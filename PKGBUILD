build() {
    cd "multiload-ng-$pkgver"
    ./autogen.sh
    ./configure --prefix=/usr --with-gtk=3.0 --disable-deprecations --without-awn --without-indicator --with-lxpanel --without-mate --without-standalone --without-systray --without-xfce4
