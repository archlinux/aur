# Maintainer: George Rawlinson <grawlinson@archlinux.org>

pkgname=cargo-sweep
pkgver=0.7.0
pkgrel=1
pkgdesc="A cargo subcommand for cleaning up unused build files generated by Cargo"
arch=('x86_64')
url="https://github.com/holmgr/cargo-sweep"
license=('MIT')
depends=('gcc-libs' 'rust')
makedepends=('git')
options=('!lto')
_commit='c6e5b4b8b039d46ab94d4c0dc9fb7c4aaa1d5b6b'
source=("$pkgname::git+$url.git#commit=$_commit")
b2sums=('SKIP')

pkgver() {
  cd "$pkgname"
  git describe --tags | sed 's/^v//'
}

prepare() {
  cd "$pkgname"
  cargo fetch --locked --target "$CARCH-unknown-linux-gnu"
}

build() {
  cd "$pkgname"
  cargo build --frozen --release
}

package() {
  cd "$pkgname"

  # binary
  install -vDm755 -t "$pkgdir/usr/bin" target/release/cargo-sweep

  # documentation
  install -vDm644 -t "$pkgdir/usr/share/doc/$pkgname" README.md

  # license
  install -vDm644 -t "$pkgdir/usr/share/licenses/$pkgname" LICENSE
}
