provides=('snazy')
conflicts=('snazy')

source_aarch64=("${pkgname}_${pkgver}_aarch64.tar.gz::https://github.com/chmouel/snazy/releases/download/0.52.11/snazy-v0.52.11-linux-arm64.tar.gz")
sha256sums_aarch64=('89ba17979ae04e366b8ae90aa8bfc7a9fc499e9d376aa30c54f6a109f4992e64')

