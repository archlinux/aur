pkgname='jaguar-bin'
pkgver=1.22.3
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('0f91f0a36d13cbcdb60e12b740862c6d00f119bd7239098f7a052742ca7eb773')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
