pkgname='jaguar-bin'
pkgver=1.30.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('c5f219d81656a06337401961db4e8aa55ca0fbdc4b62026f67ac85c71f7bc620')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
