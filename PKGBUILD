pkgname='jaguar-bin'
pkgver=1.22.2
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('cd02ff8bfdce0eade7d57688106e8d1633fe3f25600242bc2fcd901ad8e10242')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
