pkgname='jaguar-bin'
pkgver=1.9.15
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('c6c40ba5d08a71824891b74e33da2d8cfa41dd920c2516755f28a194db2db830')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
