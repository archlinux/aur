pkgname=i3-back-bin
pkgver=0.1.0
pkgrel=1
pkgdesc="An i3 utility to switch focus to your last focused window. Allows for behavior similar to Alt+Tab on other desktop environments."
url="https://github.com/Cretezy/i3-back"
license=("MIT")
arch=("x86_64")
provides=("i3-back")
conflicts=("i3-back")
