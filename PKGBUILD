pkgname='jaguar-bin'
pkgver=1.9.5
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('99e6f3c29e31138657780fae84d0f2077a32e7680c755c87a8b16fa4182e499f')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
