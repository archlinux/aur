pkgname='jaguar-bin'
pkgver=1.9.14
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('01ad6770935c9a4aaf19864e591528315add5d97ca1b8ea0db3d719b095871ea')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
