pkgname=python-pokebase
pkgver=1.4.1
pkgrel=1
pkgdesc="A Python wrapper for the friendly PokeAPI database"
arch=(any)
url="https://github.com/PokeAPI/pokebase"
license=("BSD-3-Clause")
depends=("python" "python-requests")
makedepends=("python" "python-pip")
build() {
  pip install --no-deps --target="pokebase" pokebase==1.4.1
}
package() {
  sitepackages=$(python -c "import site; print(site.getsitepackages()[0])")
  mkdir -p $pkgdir/"$sitepackages"
  cp -r $srcdir/pokebase/* $pkgdir/"$sitepackages"
}
