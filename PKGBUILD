pkgname=remux
pkgver=0.1.3a
pkgrel=1
pkgdesc="A friendly command shortener for tmux"
url="https://git.vwolfe.io/valerie/remux"
license=("MIT")
arch=("x86_64")
provides=("remux")
conflicts=("remux")
source=("https://git.vwolfe.io/valerie/remux/releases/download/v$pkgver/remux-$pkgver-x86_64.tar.gz")
sha256sums=("cf54159b8d8c807d288802972c8238fa562726fac77eaae2e77b555eefdba8df")

package() {
    install -Dm755 remux -t "$pkgdir/usr/bin"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
