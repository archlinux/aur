pkgname='jaguar-bin'
pkgver=1.8.2
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('0008ebf2dd85be52b5196ad0388cccdc619a52d0977ac72b74ee4cd4adb9aec3')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
