license=("BSD")
arch=('x86_64')
depends=('ghc-libs' 'haskell-megaparsec' 'haskell-parser-combinators')
makedepends=('ghc' 'haskell-aeson' 'haskell-tasty' 'haskell-tasty-golden' 'haskell-tasty-hunit' 'haskell-unordered-containers' 'haskell-vector' 'uusi')
