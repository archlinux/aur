pkgname='jaguar-bin'
pkgver=1.17.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('0f2cd5088f4e642fdc5cdc061a6dc25c9255a3dbdff14e1d5e2a63af26de66f2')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
