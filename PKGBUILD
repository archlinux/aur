source=("${prjname}-${pkgver}-${arch}.deb::${url}/releases/download/${pkgver}/${prjname}_${pkgver}_amd64.deb")

sha512sums=('be01c5a9f02eaecdf16b45185ba22fe6b97423261cc82bc07ab320606345189e739e9f4c6d2019a97e71bf2a52c3f11bce2fe6cbb2460134e3ed40de5d473640')

package() {
