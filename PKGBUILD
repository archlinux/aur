provides=('snazy')
conflicts=('snazy')

source_aarch64=("${pkgname}_${pkgver}_aarch64.tar.gz::https://github.com/chmouel/snazy/releases/download/0.52.14/snazy-v0.52.14-linux-arm64.tar.gz")
sha256sums_aarch64=('26c8accc5a77e342aac688d7ee0a507c509226fa4c86f13aed693bdd62dae510')

