# Maintainer: Trizen <echo dHJpemVuQHByb3Rvbm1haWwuY29tCg== | base64 -d>

_pkgname=perl-scripts
pkgname=pod2pdf-git
pkgver=23.02.r21.g35b1c6b
pkgrel=1
pkgdesc="Convert POD to PDF, with syntax highlighting."
arch=('any')
url="https://github.com/trizen/${_pkgname}"
license=('GPL3')
makedepends=('git')

provides=()
conflicts=()

depends=('perl>=5.10.0' 'perl-pod-markdown' 'markdown2pdf-git')

source=("git+https://github.com/trizen/${_pkgname}.git")
sha512sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
    cd "$_pkgname"
    install -D -m 755 "Converters/pod2pdf.pl" "$pkgdir/usr/bin/pod2pdf.pl"
}
