         'squashfs-tools' 'curl' 'ncurses' 'zlib' 'schedtool' 'perl-switch'
         'zip' 'unzip' 'libxslt' 'bc' 'rsync' 'ccache' 'inetutils'
         'ncurses5-compat-libs' 'lib32-zlib' 'lib32-ncurses' 'lib32-readline' 'libxcrypt-compat'

         #LineageOS Devel
         'ffmpeg' 'ninja' 'xml2' 'lzop' 'pngcrush' 'imagemagick')
optdepends=('wxgtk2: may be required on older versions'
            'python2-virtualenv: required on older versions to make python2 the default')
