pkgdesc="The frictionless music player for the terminal"
url="https://github.com/LeoRiether/tori"
license=("GPL-3.0-or-later")
arch=("x86_64")
provides=("tori")
conflicts=("tori")
depends=("mpv" "pipewire")
optdepends=("yt-dlp" "cava")
