pkgname='jaguar-bin'
pkgver=1.27.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('ce46a2335aa6dc9179024b0911bc8c62645d90e33c0e81a022615f41da751431')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
