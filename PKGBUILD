pkgname=makewiz-bin
pkgver=0.7.0
pkgrel=1
pkgdesc="MakeWiz is a command line tool that generates a Makefile based on the files in your directory"
url="https://github.com/kallazz/MakeWiz"
license=("MIT OR Apache-2.0")
arch=("x86_64")
provides=("makewiz")
conflicts=("makewiz")

