pkgname='jaguar-bin'
pkgver=1.9.4
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('b2777e34f7d94aec6239f5b8c4dfb5b087aebafe5276bf427d4e61b100490002')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
