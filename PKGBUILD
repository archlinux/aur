pkgname=android-devel
pkgver=1.0
pkgrel=2
pkgdesc='Metapackage to pull all dependencies required to build modern Android'
arch=('x86_64')
url='https://wiki.archlinux.org/title/Android#Building'
license=('None')
depends=('gcc' 'git' 'gnupg' 'flex' 'bison' 'gperf' 'sdl'
         'squashfs-tools' 'curl' 'ncurses' 'zlib' 'schedtool' 'perl-switch'
         'zip' 'unzip' 'libxslt' 'bc' 'rsync' 'ccache' 'inetutils'
         'ncurses5-compat-libs' 'lib32-zlib' 'lib32-ncurses' 'lib32-readline' 'lib32-ncurses5-compat-libs' 'libxcrypt-compat'

         #LineageOS Devel
         'ffmpeg' 'ninja' 'xml2' 'lzop' 'pngcrush' 'imagemagick' 'git-lfs')
optdepends=('java-environment: Build requirement for Android 8 and older versions'
            'wxgtk2: may be required on older versions'
            'python2-virtualenv: required on older versions to make python2 the default')
