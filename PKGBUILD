noextract=(
  'dead_smiling_pirates-i_18.zip'
  'joshua_morin-on_the_run.zip'
  'pornophonique-space_invaders.zip'
  'steven_dunston-northern_star.zip'
)

build() { 
  cd "${srcdir}"
  rm -rf "Dead Smiling Pirates - I 18" "Joshua Morin - On the run" "Pornophonique - Space Invaders" "Steven Dunston - Northern Star"
  mkdir "Dead Smiling Pirates - I 18" && unzip -d "Dead Smiling Pirates - I 18" dead_smiling_pirates-i_18.zip
  mkdir "Joshua Morin - On the run" && unzip -d "Joshua Morin - On the run" joshua_morin-on_the_run.zip
  mkdir "Pornophonique - Space Invaders" && unzip -d "Pornophonique - Space Invaders" pornophonique-space_invaders.zip
  mkdir "Steven Dunston - Northern Star" && unzip -d "Steven Dunston - Northern Star" steven_dunston-northern_star.zip
  mv Wise\ Guys\ -\ Lebendig* "Wise Guys - Lebendig und kraeftig und schaerfer"
  cd "Wise Guys - Lebendig und kraeftig und schaerfer"
  mv Wise\ Guys\ -\ Lebendig*\[CO\].jpg "Wise Guys - Lebendig und kraeftig und schaerfer [CO].jpg"
  mv Wise\ Guys\ -\ Lebendig*.mp3 "Wise Guys - Lebendig und kraeftig und schaerfer.mp3"
  mv Wise\ Guys\ -\ Lebendig*.txt "Wise Guys - Lebendig und kraeftig und schaerfer.txt"
  mv Wise\ Guys\ -\ Lebendig*\[BG\].jpg "Wise Guys - Lebendig und kraeftig und schaerfer [BG].jpg"
}

package() {
  cd "${srcdir}"
  install -d "${pkgdir}/usr/share/ultrastardx/songs"
  find -maxdepth 1 -type d -not -name "." -exec mv {} "${pkgdir}/usr/share/ultrastardx/songs" \;
}
