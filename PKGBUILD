pkgname='jaguar-bin'
pkgver=1.9.20
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('5c3f1075e6a1f1a9b6e6647a0b5e2a051a19c422e4bbb16d9cd3167d340a389a')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
