pkgname='jaguar-bin'
pkgver=1.9.1
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('a51b09cd32d902ccbfc49317ebbad157aaa6485d18a1897d96716878d313d9cd')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
