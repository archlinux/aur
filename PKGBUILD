pkgname=lnr-bin
pkgver=0.1.9
pkgrel=1
pkgdesc="A tiny unofficial Linear client"
url="https://github.com/alanvardy/lnr"
license=("MIT")
arch=("x86_64")
provides=("lnr")
conflicts=("lnr")
source=("https://github.com/alanvardy/lnr/releases/download/v$pkgver/lnr-$pkgver-x86_64.tar.gz")
