pkgname='jaguar-bin'
pkgver=1.8.6
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('bb2cc133f2ced38ecf63087c03ed7f01e7dd2046aa79120edf40aec8cd7a044f')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
