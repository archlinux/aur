pkgbase=linux-lts-bnx2x-2.5g
pkgver=6.1.67
pkgrel=1
pkgdesc='LTS Linux'
url='https://www.kernel.org'
arch=(x86_64)
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
  tar
  xz

)
options=('!strip')
_srcname=linux-$pkgver
_srctag=v$pkgver
source=(
  https://cdn.kernel.org/pub/linux/kernel/v${pkgver%%.*}.x/${_srcname}.tar.{xz,sign}
  "bnx2x_warpcore+8727_2_5g_sgmii_arch.patch"
  0001-ZEN-Add-sysctl-and-CONFIG-to-disallow-unprivileged-C.patch
  config  # the main kernel config file
)
validpgpkeys=(
  ABAF11C65A2970B130ABE3C479BE3E4300411886  # Linus Torvalds
  647F28654894E3BD457199BE38DBBDC86092693E  # Greg Kroah-Hartman
)
# https://www.kernel.org/pub/linux/kernel/v6.x/sha256sums.asc
sha256sums=('7537db7289ca4854a126bc1237c47c5b21784bcbf27b4e571d389e3528c59285'
            'SKIP'
            'd655669179109ae8e801a259c35dbe442ca67a49b9ceb6ca3ef0e56f48149a7d'
            '21195509fded29d0256abfce947b5a8ce336d0d3e192f3f8ea90bde9dd95a889'
            '22e1165756955f0b8ebec9b7fc1e02e4e24392f3479fdf8fdfbee64baa5fcc6b')
b2sums=('8c21a626545b20d173d21373358a35399531ba7b53ffadf635059a2ccbee669b04dbbc6d30a3e854ce1ff14445dc06d00518d585bf5e044e6dfc3d06095a997d'
        'SKIP'
        '94fd2e2fa31da0ce9d04e639b0fafc37128ad2f01f8ee38708c7128fdc1568e491aca9a8296316b0736f134dc7697b573e8203018d92c1e9b6ff40648501607a'
