pkgname='jaguar-bin'
pkgver=1.15.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('89687eb6e1d4ea66555ad74e10d3c15fc986a48ec65d6c51f89dbae0af64f300')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
