pkgname='jaguar-bin'
pkgver=1.29.1
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('1ac7fc2fbd1adbb6bcc7f4ae2f71361ee279ef00bcb5f1e32edf7b08ca92cbdf')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
