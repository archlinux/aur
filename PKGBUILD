pkgname='jaguar-bin'
pkgver=1.8.7
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('85f11dddf930e34780cefca4aa2b0a4be0f23028824ac79d6bd302da15365cc5')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
