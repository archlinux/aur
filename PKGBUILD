pkgname='jaguar-bin'
pkgver=1.9.19
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('299f98cd6810e9d6a3c3ddc8f3e9c4c1670ccdebd37f8a238cc622a1bf062af8')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
