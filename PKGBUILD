pkgname='jaguar-bin'
pkgver=1.14.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('9b0bf8b08c36b8daa8ed9d7f2a4a25fa3e4efee9dc83c524c45669f2e6f9be53')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
