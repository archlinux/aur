pkgname='jaguar-bin'
pkgver=1.29.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('f97462caaa9b0171bdef1cf21ddfaea48ba6d472ce6bcb7a8329a1fffce4815f')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
