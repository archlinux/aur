pkgname='jaguar-bin'
pkgver=1.27.1
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('f8b02148cf7aaa6449a55d7bfb0d0f32350d5b1af34ff4aaf04673715ef31ca9')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
