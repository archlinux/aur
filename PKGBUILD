pkgname='jaguar-bin'
pkgver=1.9.12
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('4e864bc9899b276f147d5f3706facebd5d37dc9f9da65341cfbe16bd1a5680f8')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
