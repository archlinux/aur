pkgname='jaguar-bin'
pkgver=1.9.0
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('8991b90a6d4127bd81f697ab191a148eb15284b59d3ba9ffcd63ef9673080dec')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
