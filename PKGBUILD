pkgname='jaguar-bin'
pkgver=1.9.8
pkgrel=1
pkgdesc="Tool to develop Toit programs for the ESP32"
arch=('x86_64')
url="https://github.com/toitlang/jaguar"
license=('MIT')
depends=('gcc-libs')
provides=('jaguar')
conflicts=('jaguar')
source=("$pkgname-$pkgver.tgz::$url/releases/download/v$pkgver/jag_linux.tgz")
sha256sums=('ebd668ffafdf60e18959c75257201a556b57f490066b18e04ca3683794728987')

package() {
	install -D jag -t "$pkgdir/usr/bin/"
}
