post_install() {
    chmod +x /usr/local/bin/install-ddh.sh
    /usr/local/bin/install-ddh.sh
    rm /usr/local/bin/install-ddh.sh

    systemctl daemon-reload
    systemctl enable ddh
    systemctl start ddh
}

post_remove() {
    sudo systemctl stop ddh
    sudo systemctl disable ddh
    sudo rm -f /etc/systemd/system/ddh.service
}
