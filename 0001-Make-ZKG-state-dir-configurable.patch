+        set(ZEEK_ZKG_STATE_DIR "${ZEEK_ROOT_DIR}/var/lib/zkg")
+    endif ()
 
     configure_file(
         ${CMAKE_CURRENT_SOURCE_DIR}/zkg-config.in
