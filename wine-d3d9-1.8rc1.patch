+    if (This->d3d && (This->d3d->wnd != d3d->wnd)) {
+        destroy_d3dadapter_drawable(This->gdi_display, This->d3d->wnd);
+    }
+    This->d3d = d3d;
+
+    if (d3d->dc_rect.top != 0 &&
+        d3d->dc_rect.left != 0) {
+        if (!pDestRect)
+            pDestRect = (const RECT *) &(d3d->dc_rect);
