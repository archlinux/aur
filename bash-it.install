post_install() {
        cat <<EOF >> /etc/bash.bashrc

source /etc/profile.d/bashit.sh
EOF
}

post_upgrade() {
        if ! grep bashit.sh /etc/bash.bashrc &> /dev/null; then
        cat <<EOF >> /etc/bash.bashrc

source /etc/profile.d/bashit.sh
EOF
        fi
}

post_remove() {
        sed -i '/bashit/d' /etc/bash.bashrc
}