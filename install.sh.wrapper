#!/usr/bin/env sh
set -e

if [[ "$(whoami)" != "$(logname)" ]]; then
  echo >&2 'This command will install files into your' \
    'home directory. It must be run without sudo.'
  exit 1
fi

cp -ruvP --preserve=mode,links -t ~/ \
  "/usr/share/bash-it-git/home_factory/.bash_it"

cd ~/.bash_it
./install.sh "$@"
