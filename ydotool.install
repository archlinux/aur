post_install() {
	echo 'Make sure your user is in the `input` group by running the following command:'
	echo '$ usermod -aG input $USER'
	echo 'Also start the ydotool daemon'
	echo ' $ systemctl start ydotoot --user'
	echo ' If it does not work, try logging out and back in'
}

post_upgrade() {
	post_install
}
