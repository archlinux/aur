post_install() {
    echo -e "\033[32mRun 'pomo' command to start pomodoro timer.\033[0m"
    echo -e "\033[32mNote: You can close she console once the timer stopped.\033[0m"
}

post_upgrade() {
    post_install
}

pre_remove() {
    echo -e "\033[32mRemoving pomo timer...\033[0m"
    rm /usr/bin/pomo
}

