[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = usr/lib/modules/*/pkgbase
Target = usr/lib/booster/*
Target = usr/lib/systemd/systemd
Target = usr/lib/systemd/boot/efi/*.efi.stub
Target = usr/share/libalpm/hooks/90-booster-ukify-install.hook
Target = usr/bin/booster-ukify
Target = usr/src/*/dkms.conf

[Action]
Description = Ensure ESP is mounted...
When = PreTransaction
Exec = /usr/bin/booster-ukify -x
