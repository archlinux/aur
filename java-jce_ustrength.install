post_install() {
	/usr/sbin/install_java_jce_ustrength install
	echo "===> Everytime jre is updated, you must run:"
	echo "===> /usr/bin/install_java_jce_ustrength install"
	echo "===> Otherwise, the programs which need this package will break."
}

