post_install(){
  cd /usr/lib/node_modules/yt-cli
  which yarn >/dev/null 2>&1 && yarn install || npm install
  echo -e "[32;1m[+] [0;1mThank you for using yt-cli!\n"
}

post_upgrade(){
  cd /usr/lib/node_modules/yt-cli
  which yarn >/dev/null 2>&1 && yarn install || npm install
}

pre_remove(){
  rm -rf /usr/lib/node_modules/yt-cli
}

