post_install() {
  getent passwd portal &>/dev/null || useradd -r portal -m / -s /bin/false >/dev/null
  portal-postconf -d $(hostname)
  portal-doveconf
  true
}

post_upgrade() {
  post_install
}

post_remove() {
  getent passwd portal &>/dev/null && userdel  portal >/dev/null
  getent group  portal &>/dev/null && groupdel portal >/dev/null
  post_install
}
