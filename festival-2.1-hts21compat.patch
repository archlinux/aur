+   for (t=0; t<pst->dw.num; t++)
+       wfree(pst->dw.width[t]);
+   wfree(pst->dw.width);
+   wfree(pst->dw.coefr[0]);
+   for (t=1; t<pst->dw.num; t++)
+       wfree(pst->dw.coefr[t]);
+   wfree(pst->dw.coefr);
