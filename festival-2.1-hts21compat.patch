+LISP HTS21_Synthesize_Utt(LISP utt)
+{
+    EST_Utterance *u = get_c_utt(utt);
+    EST_Item *item = 0;
+    LISP hts_engine_params = NIL;
+    LISP hts_output_params = NIL;
