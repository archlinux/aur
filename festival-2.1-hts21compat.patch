+static DVECTOR xdvalloc(long length)
+{
+    DVECTOR x;
+
+    length = MAX(length, 0);
+    x = wcalloc(struct DVECTOR_STRUCT,1);
+    x->data = wcalloc(double,MAX(length, 1));
+    x->imag = NULL;
+    x->length = length;
+
+    return x;
