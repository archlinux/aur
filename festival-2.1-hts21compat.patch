+      leng = fsize / 2;
+      pst->dw.coef[i] += leng;
+      pst->dw.width[i][WLEFT] = -leng;
+      pst->dw.width[i][WRIGHT] = leng;
+         
+      if (fsize % 2 == 0)
+         pst->dw.width[i][WRIGHT]--;
+   }
+ 
+   pst->dw.maxw[WLEFT] = pst->dw.maxw[WRIGHT] = 0;
