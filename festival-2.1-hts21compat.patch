+void FreeTrees(TreeSet *ts, Mtype type)
+{
+    Question *nq, *qq;
+    Pattern *pp, *np;
+    Tree *tt, *nt;
+
+    for (qq = ts->qhead[type]; qq; qq = nq)
+    {
+	nq = qq->next;
+
+	wfree(qq->qName);
+	for (pp = qq->phead; pp; pp = np)
+	{
+	    np = pp->next;
+	    wfree(pp->pat);
+	    wfree(pp);
+	}
+	wfree(qq);
+    }
+
+    for (tt = ts->thead[type]; tt; tt = nt)
+    {
+	nt = tt->next;
+
+	delete_tree_nodes(tt->root);
+
+	wfree(tt);
+    }
+
+
