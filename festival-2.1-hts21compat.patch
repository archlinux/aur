+            wfree(matrix->data);
+	}
+	if (matrix->imag != NULL) {
+            for (i=0; i<matrix->row; i++)
+                wfree(matrix->imag[i]);
+            wfree(matrix->imag);
+	}
+	wfree(matrix);
+    }
+
+    return;
