+	    wfree(ms->mceppdf[i][j]);
+	wfree(ms->mceppdf[i]);
+    }
+    wfree(ms->nmceppdf);
+    wfree(ms->mceppdf);
+
+    for (i=2; i<=ms->nstate+1; i++)
+    {
+	for (j=1; j<=ms->nlf0pdf[i-2]; j++)
+	{
+	    for (k=1; k <=ms->lf0stream; k++)
+		wfree(ms->lf0pdf[i][j][k]);
+	    wfree(ms->lf0pdf[i][j]);
+	}
+	wfree(ms->lf0pdf[i]);
+    }
+    wfree(ms->nlf0pdf);
+    wfree(ms->lf0pdf);
+}
