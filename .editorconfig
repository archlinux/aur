# https://editorconfig.org/#file-format-details
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
continuation_indent_size = 2
insert_final_newline = true
trim_trailing_whitespace  = true
max_line_length = 120

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
indent_size = 8

[*.yml]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
