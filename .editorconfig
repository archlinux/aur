# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{diff,patch}]
end_of_line = lf
trim_trailing_whitespace = false

[PKGBUILD]
indent_size = 2

[*.json]
indent_size = 2

[*.p8]
indent_size = 4

[*.py.template]
indent_size = 4

[*.toml.template]
indent_size = 4
