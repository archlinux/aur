post_install() {
	xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	ln -s /usr/lib/4kvideodownloader/4kvideodownloader.sh /usr/bin/4kvideodownloader

	update-desktop-database -q
}

post_upgrade() {
	post_install
}

post_remove() {
	xdg-icon-resource forceupdate --theme hicolor &> /dev/null
	rm -f /usr/bin/4kvideodownloader
	update-desktop-database -q
}
