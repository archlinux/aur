post_install() {
    echo "Creating kavita user"
    useradd --system kavita
    chown -R kavita /opt/kavita
    chown kavita /etc/Kavita/appsettings.json
    echo "Done"
    echo "To run, systemctl start kavita"
    echo "site at localhost:5000"
}

post_upgrade() {
    chown -R kavita /opt/kavita
    chown kavita /etc/Kavita/appsettings.json
}

post_remove() {
    userdel kavita
}
