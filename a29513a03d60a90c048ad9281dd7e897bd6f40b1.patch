Subject: [PATCH] Don't use --flake8 option for pytest

---
 pytest.ini | 3 ---
 1 file changed, 3 deletions(-)

diff --git a/pytest.ini b/pytest.ini
index 7d86c9c..bbc5c14 100644
--- a/pytest.ini
+++ b/pytest.ini
@@ -2,10 +2,7 @@
 addopts =
     --strict-config
     --strict-markers
-    --flake8
 xfail_strict = True
 junit_family = xunit2
 filterwarnings =
     error
-    # Suppress deprecation warning in flake8
-    ignore:SelectableGroups dict interface is deprecated::flake8
