post_install() {
  /usr/share/vscodium-features/patch.py vscodium-features patch
}

pre_upgrade() {
  /usr/share/vscodium-features/patch.py vscodium-features restore
}

post_upgrade() {
  /usr/share/vscodium-features/patch.py vscodium-features patch
}

pre_remove() {
  /usr/share/vscodium-features/patch.py vscodium-features restore
  /usr/bin/rm -f /usr/share/vscodium-features/cache.json
}
