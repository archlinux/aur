#define LOG_PREFIX log_console::l_lock << log_console::l_localtime << l_location
#define LOG_COLOR color::yellow << color::italic
#define DEBUG_COLOR color::faint << color::yellow
#define ERR_PREFIX log_console::l_lock << log_console::l_localtime << l_location

#define LOG (__detail__::_log_ << LOG_PREFIX)
#define ERR (__detail__::_err_ << ERR_PREFIX)
#define ENDENT color::reset << log_console::l_unlock
#define ENDENTLN color::reset << log_console::l_endent

#define ERROR(message) (ERR << color::red << color::bold << "error" << color::reset << " : " << color::red << color::italic << message << color::reset << color::red << "." << ENDENTLN)
#define FATAL_ERROR(message) ERROR(message); throw std::runtime_error(message)
#define PRINT(stream, message) ((stream) << LOG_PREFIX << LOG_COLOR << message << ENDENT)
#define PRINTLN(stream, message) ((stream) << LOG_PREFIX << LOG_COLOR << message << ENDENTLN)

#define DEFAULT_ERROR_HANDLER [](const char* str, size_t size, void* err_stream) { *static_cast<log_console*>(err_stream) << ERR_PREFIX << color::red << str << ENDENTLN; return 0; }

#include <cstring>
