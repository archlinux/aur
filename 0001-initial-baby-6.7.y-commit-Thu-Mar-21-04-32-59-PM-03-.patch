+{
+	struct bs_node *prev;
+
+	if (!(*q) || entity_before(bsn, *q)) {
+		bsn->next = *q;
+		*q = bsn;
+		return;
+	}
+
+	// insert after prev
+	prev = *q;
+	while (prev->next && entity_before(prev->next, bsn))
+		prev = prev->next;
+
+	bsn->next = prev->next;
+	prev->next = bsn;
