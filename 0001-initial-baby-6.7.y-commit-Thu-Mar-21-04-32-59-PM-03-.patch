+	while (itr && itr != bsn) {
+		prev = itr;
+		itr = itr->next;
+	}
+
+	if (bsn == cfs_rq->q2_head)
+		// if it is the head
+		cfs_rq->q2_head = cfs_rq->q2_head->next;
+	else
+		prev->next = itr->next;
