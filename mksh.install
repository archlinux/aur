post_install() {
  grep -x '/bin/mksh' /etc/shells 2>/dev/null || echo '/bin/mksh' >> /etc/shells
  grep -x '/usr/bin/mksh' /etc/shells 2>/dev/null || echo '/usr/bin/mksh' >> /etc/shells
}

post_upgrade() {
  post_install
}

post_remove() {
  sed -i '/^(\/usr)?\/bin\/mksh$/d' /etc/shells
}

