+int
+check_mbox(const char *path, int *new, int *read, int *unread)
+{
+  char linebuf[BUF_SIZE];
+  FILE *mbox;
+  int linelen;
+  unsigned short in_header= 0;	/* do we parse mail header or mail body? */
