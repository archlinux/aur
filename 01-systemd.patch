+			SYSTEMD_PREFIX="$withval"
+			sysv_style=systemd
+			AC_MSG_RESULT([enabling systemd support with prefix $SYSTEMD_PREFIX])
+		fi
+	], [SYSTEMD_PREFIX=/usr/lib]
+)
+
+SYSTEMDDIR=${SYSTEMD_PREFIX}/systemd/system
+AC_SUBST(SYSTEMDDIR)
