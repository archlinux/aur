post_install() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor

	if [ -f usr/bin/update-mime-database ]; then
		update-mime-database usr/share/mime &> /dev/null
	fi

	update-desktop-database -q
}

post_upgrade() {
	post_install
}

post_remove() {
	gtk-update-icon-cache -q -t -f usr/share/icons/hicolor

	update-desktop-database -q
}
