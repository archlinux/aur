TitlePadding		8

Color
{
	BorderColor "#2a0308"
	{
#		"Clock"			"#dfdfdf"
#		"PopUp"			"#2a0308"
		"TWM Icon Manager"	"#2a0308"
	}
	BorderTileBackground		"#2a0308"
	BorderTileForeground		"chocolate"
