	DefaultForeground		"#dfdfdf"
	TitleBackground			"#2a0308"
	TitleForeground			"#dfdfdf"
	MenuBackground			"#2a0308"
	MenuForeground			"#dfdfdf"
	MenuBorderColor			"chocolate"
	MenuShadowColor			"#2a0308"
