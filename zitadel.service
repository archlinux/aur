[Unit]
Description=Zitadel IAM
After=postgresql.service

[Service]
RestartSec=2s
Type=simple
User=zitadel
WorkingDirectory=/var/lib/zitadel
Environment=USER=zitadel HOME=/var/lib/zitadel
ExecStart=/usr/bin/zitadel start --config /etc/zitadel/config.yaml --masterkeyFile /etc/zitadel/master.key --tlsMode external
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
