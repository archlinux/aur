## arg 1:  the new package version
post_install() {
  new=$1
  if [[ $(vercmp "$new" 0.9) -ge 0 ]]; then
    cat <<EOF

-----------------------------------------------------------------

  Since mailctl version 0.9 there are two exclusive options
  to store OAuth credentials:

    - Gnome keyring
    - GnuPG encrypted files

  For details see the README and the templates in
  /usr/share/mailctl/configs.

-----------------------------------------------------------------

EOF

  fi
}
