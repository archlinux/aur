#!/usr/bin/env bash
#
# SPDX-License-Identifier: AGPL-3.0

# Refresh android multimedia library
# $1: path to scan
_mediascan() {
  local \
    _path="${1}"
  am broadcast \
     -a android.intent.action.MEDIA_MOUNTED \
     -d "file://${_path}"
  termux-media-scan "${_path}"
}

_path="${1}"

_mediascan "${_path}"
