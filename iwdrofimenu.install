post_install() {
    echo "Installation of $1 completed."
    echo "To use iwdrofimenu run it as a rofi script, for example with"
    echo "  rofi -show \"WIFI\" -modi \"WIFI:iwdrofimenu\""
    echo ""
    echo "Run"
    echo "  iwdrofimenu --help"
    echo "for more information"
}

