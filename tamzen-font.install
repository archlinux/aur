# arg 1: the new package version
post_install() {
  echo "Make sure that you add /usr/share/fonts/local/ to xorg.conf under the"
  echo "\"Files\" section."
  echo "See the README in /usr/share/doc/tamzen-font for more info."
}

# arg 1: the new package version
# arg 2: the old package version
post_upgrade() {
  post_install $1
}

