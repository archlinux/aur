[Unit]
Description = Kannel Bearerbox
After = network.target

[Service]
User = kannel
PIDFile = /run/kannel/bearerbox.pid
ExecStart = /usr/bin/start-stop-daemon --start \
              --pidfile /run/kannel/bearerbox.pid \
              --exec /usr/bin/bearerbox /etc/kannel/kannel.conf

[Install]
WantedBy = multi-user.target

