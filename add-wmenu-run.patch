+#!/bin/sh
+
+cache_dir="${XDG_CACHE_HOME:-"$HOME/.cache"}"
+cache="$cache_dir/wmenu_run"
+
+uptodate()
+{
+	IFS=:
+	for path  in $PATH
+	do
+		test "$path" -nt "$cache" &&
+			return 1
+	done
+
+	return 0
+}
+
+get_bin()
+{
+	IFS=:
+	for path in $PATH
+	do
+		for bin in "$path"/*
+		do
+			[ -x "$bin" ] &&
+				echo "${bin##*/}"
+		done
+	done
+}
+
+[ -d "$cache_dir" ] ||
+	mkdir -p "$cache_dir"
+
+if [ -f "$cache" ] && uptodate
+then
+	wmenu "$@" < "$cache" | ${SHELL:-"/bin/sh"} &
+else
+	get_bin | sort -u | tee "$cache" | wmenu "$@" | ${SHELL:-"/bin/sh"} &
+fi
