pre_install(){
    systemctl enable docker --now
}

post_install(){
    docker pull qzwlecr/netease-cloud-music-docker-version
    echo "[WARNING!]Please use \"usermod -a -G docker USERNAME\" to make sure you can access docker-daemon"
}

pre_upgrade(){
    systemctl enable docker --now
}

post_upgrade(){
    docker pull qzwlecr/netease-cloud-music-docker-version
}

pre_remove(){
    systemctl enable docker --now
}

post_remove(){
    docker rmi -f qzwlecr/netease-cloud-music-docker-version
}
