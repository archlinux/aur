[Unit]
Description=XMRig Daemon for %i
After=network.target

[Service]
User=xmrig
Group=xmrig
Type=forking
ExecStart=/usr/bin/xmrig -c %i.conf --background --syslog
WorkingDirectory=/etc/xmrig
Restart=on-failure
RestartSec=20s
StartLimitInterval=30min
StartLimitBurst=30

[Install]
WantedBy=multi-user.target
