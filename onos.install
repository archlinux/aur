post_install() {
    if ! getent group sdn >/dev/null; then
        groupadd sdn --system
    fi
    if ! getent passwd sdn >/dev/null; then
        useradd -c 'ONOS user' -g sdn -d '/opt/onos' -s /bin/bash sdn --system
    fi

    chown -R sdn:sdn '/opt/onos'
}

post_upgrade() {
    post_install
}

