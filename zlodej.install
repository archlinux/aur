dir=/usr/share/zlodej
dir2=$dir/DATADISK
post_install(){
	cp -n $dir2/{ORIGIN,GAMES}.LST
	USER=`who -m|cut -d\  -f1`
	chown $USER: $dir2/GAMES.LST
}
pre_remove(){
	[ "`diff $dir2/{ORIGIN,GAMES}.LST`" != '' ] || rm $dir2/GAMES.LST
}
post_remove(){
	[ ! -d $dir ] || echo -e "\e[31mNásledující soubory nebyly odstraněny:\n\n`find $dir -type f|sort`\e[m"
}
