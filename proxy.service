[Unit]
Description=HTTP proxy server.
After=docker.service
BindsTo=docker.service
Conflicts=shutdown.target reboot.target halt.target

[Service]
User=service
Restart=always
RestartSec=10
WorkingDirectory=/srv/http/proxy
ExecStartPre=-/usr/bin/env docker-compose --file base.yml kill $APP
ExecStartPre=-/usr/bin/env docker-compose --file base.yml rm --force $APP
ExecStart=/usr/bin/env docker-compose --file base.yml up --no-build --force-recreate --no-deps $APP
ExecStop=/usr/bin/env docker-compose --file base.yml stop $APP
NotifyAccess=all

[Install]
WantedBy=multi-user.target
