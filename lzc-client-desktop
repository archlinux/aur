#!/bin/bash

XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-~/.config}

# Allow users to override command-line options
if [[ -f $XDG_CONFIG_HOME/lzc-flags.conf ]]; then
   LZC_USER_FLAGS="$(sed 's/#.*//' $XDG_CONFIG_HOME/lzc-flags.conf | tr '\n' ' ')"
fi

# Launch
exec /opt/lzc-client-desktop/lzc-client-desktop "$@" $LZC_USER_FLAGS
